extends layout

block content
  .container
    .content
      h1= title
      hr
      br
      if error
        .alert.alert-danger #{error}
      else
        table.table.table-striped.table-bordered.table-hover
          if contacts
            thead
              tr
                th ID
                th Nombre
                th Apellido
                th EMail
            tbody
              for contact in contacts
                tr
                  td= contact.id
                  td= contact.firstname
                  td= contact.lastname
                  td= contact.email
          else
            form(action="/seed", method="POST")
                button(type="submit").btn.btn-primary Cargar Datos
            br
            br
            tr
              td
                | No se han encontrados contactos
    br
    p= version
